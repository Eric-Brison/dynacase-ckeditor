PACKAGE=@PACKAGE@
VERSION=@VERSION@
RELEASE=@RELEASE@
utildir=@PUBRULE@
pubdir=@prefix@
appname=@APPNAME@

pages_not_xml=info.xml
pages_not_php=fam2po.php po2js.php

include $(utildir)/PubRule

$(pubdir):
	mkdir -p $@

$(pubdir)/programs: $(pubdir)
	mkdir -p $@

$(pubdir)/programs/ckeditor_install: programs/ckeditor_install $(pubdir)/programs
	cp $< $@
	chmod a+x $@

$(pubdir)/$(appname): $(pubdir)
	mkdir -p $@

$(pubdir)/$(appname)/.htaccess: htaccess $(pubdir)/$(appname)
	cp htaccess $(pubdir)/ckeditor/.htaccess

$(pubdir)/.autoloader-ignore.d:
	mkdir -p $@
$(pubdir)/.autoloader-ignore.d/@PACKAGE@: autoloader-ignore-d $(pubdir)/.autoloader-ignore.d
	cp $< $@

publish: $(pubdir)/programs/ckeditor_install $(pubdir)/$(appname)/.htaccess $(pubdir)/.autoloader-ignore.d/@PACKAGE@
